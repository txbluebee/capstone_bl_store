<div class="container">
  <div class="col-sm-6">
    <%= simple_form_for [:admin, @product] do |f| %>
      <%= f.input :title %>
      <%= f.input :price %>
      <%= f.input :quantity %>
      <%= f.input :description %>
      <%= f.input :image, as: :file %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
