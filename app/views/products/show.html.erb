<%= render 'layouts/navbar' %>
<%= render 'layouts/header' %>
<div class="container">
  <%= image_tag @product.image.url(:medium) %>
  <h1><%= @product.title %> | $<%= @product.price %></h1>
  <p>
    <%= @product.description %>
  </p>
  <%= link_to 'Add To Cart', add_to_cart_product_path(@product), :method => :post, class: 'btn btn-primary' %>
</div>
